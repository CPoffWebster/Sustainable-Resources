<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F7DE"
    android:orientation="vertical"
    tools:context=".AddResourceFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo_taken_image"
                android:layout_width="184dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <EditText
                android:id="@+id/name_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:hint="Name of Resource" />

            <EditText
                android:id="@+id/location_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:hint="Location / Building" />

            <EditText
                android:id="@+id/information_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:hint="Additional Information" />

            <Button
                android:id="@+id/category_spinner"
                android:layout_width="247dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:background="@drawable/outline_background"
                android:text="Select Category"
                android:textColor="#8b8989"/>

            <Button
                android:id="@+id/add_resource_btn"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="Add Resource"
                android:layout_marginBottom="20dp"
                android:background="@drawable/popup_bg"
                android:textSize="30dp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>